<p id="notice"><%= notice %></p>

<h1><%= I18n.t('dictionary.books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('dictionary.title') %></th>
      <th><%= I18n.t('dictionary.memo') %></th>
      <th><%= I18n.t('dictionary.author') %></th>
      <th><%= I18n.t('dictionary.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to (I18n.t('dictionary.show')), book %></td>
        <td><%= link_to (I18n.t('dictionary.edit')), edit_book_path(book) %></td>
        <td><%= link_to (I18n.t('dictionary.destroy')), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (I18n.t('dictionary.new_book')), new_book_path %>
